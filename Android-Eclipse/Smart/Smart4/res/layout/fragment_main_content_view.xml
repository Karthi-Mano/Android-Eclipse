<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <com.wjz.smart1.view.NoSlidingViewPage
        android:id="@+id/vp_main_content_page"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >
    </com.wjz.smart1.view.NoSlidingViewPage>

    <RadioGroup
        android:id="@+id/rg_main_content_radios"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bottom_tab_bg"
        android:gravity="center"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/rb_main_content_home"
            style="@style/RadioButtonStyle"
            android:drawableTop="@drawable/rb_home_selector"
            android:text="首页"
             />

        <RadioButton
            android:id="@+id/rb_main_content_newscenter"
            style="@style/RadioButtonStyle"
            android:drawableTop="@drawable/rb_newscenter_selector"
            android:text="新闻中心"
             />
       
        <RadioButton
            android:id="@+id/rb_main_content_smartservice"
            style="@style/RadioButtonStyle"
            android:drawableTop="@drawable/rb_smartservice_selector"
            android:text="智慧服务"
             />

         <RadioButton
            android:id="@+id/rb_main_content_govaffair"
            style="@style/RadioButtonStyle"
            android:drawableTop="@drawable/rb_govaffair_selector"
            android:text="政务"
             />

        <RadioButton
            android:id="@+id/rb_main_content_settingcenter"
            style="@style/RadioButtonStyle"
            android:drawableTop="@drawable/rb_settingcenter_selector"
            android:text="设置中心"
             />
    </RadioGroup>

</LinearLayout>