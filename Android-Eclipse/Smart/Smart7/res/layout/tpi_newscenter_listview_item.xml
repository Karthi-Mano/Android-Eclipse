<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp" >

    <ImageView
        android:id="@+id/iv_listview_pic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#000"
        android:padding="1dp"
        android:scaleType="fitXY"
        android:src="@drawable/news_pic_default" />

    <TextView
        android:id="@+id/tv_listview_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/iv_listview_pic"
        android:text="12312321312321312321312321"
        android:textColor="#000" />

    <TextView
        android:id="@+id/tv_time_listview_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="5dp"
          android:textColor="#000"
        android:layout_toRightOf="@id/iv_listview_pic"
        android:text="2014/11/11 11:11:11" />

    <ImageView
        android:id="@+id/iv_comment_listview_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/icon_news_comment_num" />

</RelativeLayout>