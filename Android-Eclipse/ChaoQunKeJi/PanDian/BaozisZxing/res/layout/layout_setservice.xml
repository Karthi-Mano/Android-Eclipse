<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#47a0da" >

        <TextView
            android:id="@+id/tv_un"
            style="@style/tab_top_stype"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:text="@string/tv_configuration" />

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:clickable="true"
             android:onClick="onBack"
            android:src="@drawable/back" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/RelativeLayout1"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" >

        <TextView
            android:id="@+id/tv_showerror"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center"
            android:background="#fff2cc"
            android:visibility="invisible" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp" >

        <TextView
            android:id="@+id/tv_configurationAdress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/word_all"
            android:text="@string/tv_configuration_name" />

        <Button
            android:id="@+id/btn_sure"
            style="@style/btntitle"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_below="@+id/et_upwd"
            android:layout_marginTop="10dp"
            android:background="@drawable/shape"
            android:onClick="doAddress"
            android:text="设置" />

        <EditText
            android:id="@+id/et_upwd"
            style="@style/et_all_type"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_below="@+id/tv_configurationAdress" />

        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>